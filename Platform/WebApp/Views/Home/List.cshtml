@model IEnumerable<Product>
@{
    Layout = null;
    var average = Model.Average(x => x.Price);
}
<!DOCTYPE html>
<html>
<head>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <h6 class="bg-primary text-white text-center m-2 p-2">Products</h6>
    <div>
        <table class="table table-sm table-striped table-bordered">
            <thead>
                <tr><th>Name</th><th>Price</th><th>Average</th></tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr><td>@p.Name</td><td>@p.Price</td><td>@((p.Price / average * 100).ToString("F1")) % of average</td></tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
