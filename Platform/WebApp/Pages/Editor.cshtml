@page "{id:int}"
@model EditorModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="bg-primary text-white text-center m-2 p-2">Editor</div>
    <div class="m-2">
        <table class="table table-sm table-striped table-bordered">
            <tbody>
                <tr for="Product.Name" />
                <tr for="Product.Price" format="c" />
            </tbody>
        </table>
        <form method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label>Price</label>
                <input name="price" class="form-control" value="@Model.Product?.Price" />
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
        </form>
    </div>
</body>
</html>
@functions {
    public class EditorModel : PageModel
    {
        private readonly DataContext _context;
        public Product Product { get; set; } = new();
        public EditorModel(DataContext context)
        {
            _context = context;
        }
        public async Task OnGetAsync(int id)
        {
            Product = await _context.Products.FindAsync(id) ?? new();
        }
        public async Task<IActionResult> OnPostAsync(int id, decimal price)
        {
            var p = await _context.Products.FindAsync(id);
            p.Price = price;
            await _context.SaveChangesAsync();
            return RedirectToPage();
        }
    }
}
