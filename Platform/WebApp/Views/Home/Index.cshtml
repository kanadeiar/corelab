@model Product
@{
    Layout = "_SimpleLayout";
}
<div class="m-2" wrapper="true">Inner Content</div>
<div route-data></div>
<table class="table table-sm table-striped table-bordered">
    <tablehead bg-color="danger">Product Summary</tablehead>
    <tbody>
        <tr><th>Name</th><td highlight>@Model?.Name</td></tr>
        <tr><th>Price</th><td bg-color="dark">@Model?.Price.ToString("c")</td></tr>
        <tr><th>Category Id</th><td>@Model?.CategoryId</td></tr>
        <tr><th>Supplier Id</th><td>@Model?.SupplierId</td></tr>
    </tbody>
</table>
