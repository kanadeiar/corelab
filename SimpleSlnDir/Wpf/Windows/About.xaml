<Window x:Class="Wpf.Windows.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf.Windows"
        mc:Ignorable="d"
        Height="400" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip"
        Title="О программе ..." >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="LightCyan">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="34">
                Wpf 
            </TextBlock>
        </Grid>
        <Grid Grid.Row="1" Margin="40, 20">

        </Grid>
        <Button Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="100, 10" Cursor="Hand" Name="OkButton"
                Click="OkButton_Click">
            ОK
        </Button>
    </Grid>
</Window>