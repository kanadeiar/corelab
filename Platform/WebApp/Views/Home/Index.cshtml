@model Product
<!DOCTYPE html>
<html>
    <head>
        <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    </head>
    <body>
        <h6 class="bg-primary text-white text-center m-2 p-2">Product Table</h6>
        <div>
            <table class="table table-sm table-striped table-bordered">
                <tbody>
                    <tr><th>Name</th><td>@Model?.Name</td></tr>
                    <tr><th>Price</th><td>@Model?.Price.ToString("c") (@( ((Model?.Price / ViewBag.AveragePrice) * 100).ToString("F2") )% of average price)</td></tr>
                    <tr><th>Category Id</th><td>@Model?.CategoryId</td></tr>
                    <tr><th>Supplier Id</th><td>@Model?.SupplierId</td></tr>
                </tbody>
            </table>
        </div>
    </body>
</html>
