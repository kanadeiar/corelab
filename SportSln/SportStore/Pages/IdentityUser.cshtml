@page
@model IdentityUserModel

<h3 class="bg-primary text-white text-center p-2">Admin User</h3>
<table class="table table-sm table-striped table-bordered">
    <tbody>
        <tr>
            <th>User</th>
            <td>@Model.User.UserName</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.User.Email</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>@Model.User.PhoneNumber</td>
        </tr>
    </tbody>
</table>

@functions {
    [Authorize]
    public class IdentityUserModel : PageModel
    {
        private UserManager<IdentityUser> _manager;
        public IdentityUserModel(UserManager<IdentityUser> manager)
        {
            _manager = manager;
        }
        public IdentityUser User { get; set; }
        public async Task OnGetAsync()
        {
            User = await _manager.FindByNameAsync("admin");
        }
    }
}