<div>
    <h6 class="bg-primary text-white text-center m-2 p-2">Cubed</h6>
    <form method="get" action="/home/cube" class="m-2">
        <label>Value</label>
        <input name="num" class="form-control my-2" value="@(TempData["value"])" placeholder="Input the double value" />
        <button class="btn btn-primary" type="submit">Submit</button>
    </form>
    @if (TempData["result"] != null)
    {
        <div class="bg-info text-white m-2 p-2">
            The cube of @TempData["value"] is @TempData["result"]
        </div>
    }
</div>
