<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1"
    xmlns:views="clr-namespace:MauiApp1.Views"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime"
    Title="Приложение"
    FlyoutBackgroundColor="LightGreen"
    BackgroundColor="LightGreen"
    TabBarBackgroundColor="LightCyan">

    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <Grid BackgroundColor="Gray"
                  HeightRequest="200">
                <Image Aspect="AspectFill"
                       Source="logo.png"
                       Opacity="0.6" />
                <Label Text="Опытное приложение"
                       TextColor="White"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center" />
            </Grid>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>

    <!--<ShellContent
        Title="Главная"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />-->
    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <!--<Tab Title="Опросник" Icon="cat.png">
            <ShellContent Title="Вопросы" 
                          Icon="cat.png"
                          ContentTemplate="{DataTemplate views:CatPage}"/>
            <ShellContent Title="Настройки" 
                          Icon="cat.png"
                          ContentTemplate="{DataTemplate views:DogPage}"/>
        </Tab>-->

        <ShellContent Title="Опросник"
                      Icon="cat.png"
                      ContentTemplate="{DataTemplate views:QuestionPage}"/>
        <ShellContent Title="Настройки"
                      Icon="cat.png"
                      ContentTemplate="{DataTemplate views:SettingsPage}"/>
    </FlyoutItem>

    <ShellContent Title="О программе"
                  Icon="cat.png"
                  ContentTemplate="{DataTemplate views:AboutPage}" />

    <Shell.FlyoutFooterTemplate>
        <DataTemplate>
            <StackLayout>
                <Label Text="© Название комании, 2025"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" 
                       Margin="10"/>
            </StackLayout>
        </DataTemplate>
    </Shell.FlyoutFooterTemplate>
</Shell>
